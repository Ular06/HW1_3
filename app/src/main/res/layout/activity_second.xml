<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="175dp"
        android:hint="To"
        android:paddingTop="6dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:paddingTop="6dp"
        android:textSize="25sp"
        android:hint="From"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/ic_telegramm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_700" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/ic_baseline_attach_file_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:onClick="onClickBack"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:layout_width="150dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="60dp"
      android:text="Compose"
      android:paddingStart="10dp"
      android:textColor="@color/black"
      android:textSize="30sp"
      android:layout_height="40dp"/>

    <TextView
        android:id="@+id/txt_lastFrom"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:text="None text"
        android:paddingTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="None text"
        android:paddingTop="6dp"
        android:id="@+id/txt_lastTo"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_lastFrom" />

    <TextView
        android:paddingTop="6dp"
        android:text="None text"
        android:id="@+id/txt_empty1"
        android:layout_width="360dp"
        app:layout_constraintTop_toBottomOf="@id/txt_lastTo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_height="50dp"/>

    <TextView
        android:text="None text"
        android:paddingTop="6dp"
        android:id="@+id/txt_empty2"
        android:layout_width="360dp"
        app:layout_constraintTop_toBottomOf="@id/txt_empty1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/txt_empty2"
        android:text="SEND"
        android:layout_marginTop="120dp"
        android:layout_width="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="55dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>